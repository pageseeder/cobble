<project name="cobble-test" >

<!--
  Test the XSLT directly for the XSLT documentation
-->
<target name="test-template-xslt-xml">
  <mkdir dir="doc/xml"/>
  <xslt in="code/sample.xsl" style="../src/org/weborganic/cobble/xslt/doc-xslt.xsl" out="doc/xml/sample.xsl.xml"/>
</target>

<!--
  Test the XSLT directly for the Schematron documentation
-->
<target name="test-template-schematron-xml">
  <mkdir dir="doc/xml"/>
  <xslt in="code/sample.sch" style="../src/org/weborganic/cobble/xslt/doc-schematron.xsl" out="doc/xml/sample.sch.xml"/>
</target>

<!--
  Test the main method
-->
<target name="test-java-xslt-xml">
  <mkdir dir="doc/xml"/>
  <java classname="org.weborganic.cobble.Main" classpath="../classes;../lib/saxonhe-9.5.1.3.jar">
    <arg value="code/sample.xsl"/>
  </java>
</target>

<!--
  Test the main method
-->
<target name="test-java-xslt-html">
  <mkdir dir="doc/xml"/>
  <java classname="org.weborganic.cobble.Main" classpath="../classes;../lib/saxonhe-9.5.1.3.jar">
    <arg value="code/sample.xsl"/>
    <arg value="-html"/>
    <arg value="-o"/><arg value="doc/html"/>
  </java>
</target>

</project>
